pipeline {
    agent any

    environment {
        TEST_IMAGE = 'arxive-tests'
        APP_IMAGE = 'arxiv-app'
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        AWS_DEFAULT_REGION    = 'eu-west-3'
        S3_BUCKET_NAME        = 'bucketarxiv'
    }

    stages {

        stage('Build Test Container') {
            steps {
                dir('.') {
                    sh "docker build -t ${TEST_IMAGE} -f jenkins/tests/Dockerfile_test ."
                }
            }
        }

        stage('Run Unit Tests') {
            steps {
                dir('.') {
                    sh """
                    docker run --rm \\
                        --env AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID} \\
                        --env AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY} \\
                        --env AWS_DEFAULT_REGION=${AWS_DEFAULT_REGION} \\
                        ${TEST_IMAGE} python -m unittest discover -s jenkins/tests -p '*_test.py'
                    """
                }
            }
            post {
                always {
                    junit 'jenkins/tests/junit-report.xml'
                }
            }
        }

        stage('Build ETL Container') {
            steps {
                dir('jenkins') {
                    sh "docker build -t ${APP_IMAGE} ."
                }
            }
        }

        stage('Run ETL and Upload to S3') {
            steps {
                dir('.') {
                    echo "Starting ETL Process using ${APP_IMAGE}..."

                    // Exécuter le script fetch_arxiv_unitaire.py qui fait fetch + upload S3
                    sh """
                    docker run --rm \\
                        --env AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID} \\
                        --env AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY} \\
                        --env AWS_DEFAULT_REGION=${AWS_DEFAULT_REGION} \\
                        --env S3_BUCKET=${S3_BUCKET_NAME} \\
                        ${APP_IMAGE} python jenkins/tests/fetch_arxiv_unitaire.py
                    """
                }
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline completed successfully!'
        }
        failure {
            echo '❌ Pipeline failed.'
        }
    }
}